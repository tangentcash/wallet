{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tangentwallet",
  "version": "0.1.0",
  "identifier": "cash.tangent.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:18421",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tangent Wallet",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
